<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_motion_layout"
    android:fitsSystemWindows="true"
    tools:context=".Activity.MainActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent">



    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@android:color/white"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <RelativeLayout
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/search_btn"
                android:layout_margin="12dp"
                android:background="@drawable/ic_baseline_search_24"
                android:gravity="center"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_alignParentEnd="true"
                android:foregroundGravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription" />
                <ImageButton
                    android:id="@+id/nav_btn"
                    android:layout_margin="12dp"
                    android:background="@drawable/ic_nav_toggle_24"
                    android:gravity="center"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_alignParentEnd="false"
                    android:foregroundGravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription" />




                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    app:tabGravity="fill"
                    android:background="@android:color/transparent"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_horizontal"
                    app:tabMode="scrollable"
                    app:tabTextColor="@color/colorPrimaryDark"
                    android:layout_below="@id/search_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <ImageView
        android:id="@+id/back_shadow"
        android:scaleType="fitXY"
        android:alpha="0.75"
        android:visibility="visible"
        android:src="@android:color/black"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/nav_drawer"
        android:background="@android:color/white"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">


        <ImageView
            android:id="@+id/weather_pic"
            android:scaleType="centerCrop"
            android:src="@drawable/weather"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <ImageView
            android:alpha="0.75"
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>


        <TextView
            android:id="@+id/city"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textAllCaps="false"
            tools:text="Bangalore"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/temp"
            android:textColor="@android:color/white"
            android:textSize="46sp"
            android:textStyle="bold"
            tools:text="19 \u2103"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <TextView
            android:id="@+id/bookMarks"
            android:layout_below="@id/weather_pic"
            android:background="@color/inactive_color"
            android:text="BookMarks"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_centerInParent="true"
            android:gravity="left"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>